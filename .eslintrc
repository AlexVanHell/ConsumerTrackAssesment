{
  "env": {
    "jest": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parser": "@babel/eslint-parser",
  "rules": {
    "arrow-body-style": "off",
    "arrow-parens": ["error", "always"],
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["src/setupTests.js", "**/*.test.js", "**/*.spec.js"] }
    ],
    "max-len": ["warn", { "code": 100 }]
  }
}
